<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:key="app_language_section" android:order="1">
        <org.chromium.chrome.browser.language.settings.LanguageItemPickerPreference android:key="app_language_preference" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/languages_content_title" android:key="content_languages_section" android:order="2" app:allowDividerAbove="true">
        <org.chromium.chrome.browser.language.settings.ContentLanguagesPreference android:layout="@layout/languages_preference" android:key="content_languages_preference" android:widgetLayout="@layout/accept_languages_list" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/languages_settings_translation_title" android:key="translation_settings_section" android:order="3" app:allowDividerAbove="true" app:allowDividerBelow="false">
        <org.chromium.components.browser_ui.settings.ChromeSwitchPreference android:key="translate_switch" android:summaryOn="@string/languages_send_translate_switch" android:summaryOff="@string/languages_send_translate_switch" app:allowDividerAbove="false" app:allowDividerBelow="true" />
        <PreferenceCategory android:layout="@layout/preference_category_no_title_or_padding" android:key="translation_advanced_settings_section" app:allowDividerAbove="true" app:allowDividerBelow="false" app:initialExpandedChildrenCount="0">
            <org.chromium.chrome.browser.language.settings.LanguageItemPickerPreference android:title="@string/languages_settings_target" android:key="translate_settings_target_language" app:allowDividerAbove="false" app:allowDividerBelow="false" />
            <org.chromium.chrome.browser.language.settings.LanguageItemListPreference android:title="@string/languages_settings_automatic" android:key="translate_settings_always_languages" app:allowDividerAbove="false" app:allowDividerBelow="false" />
            <org.chromium.chrome.browser.language.settings.LanguageItemListPreference android:title="@string/languages_settings_dont_offer_langs" android:key="translate_settings_never_languages" app:allowDividerAbove="false" app:allowDividerBelow="false" />
        </PreferenceCategory>
    </PreferenceCategory>
</PreferenceScreen>